<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:id="@+id/message_txt"
                    android:textAlignment="viewStart"
                    android:paddingBottom="@dimen/_3sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:maxWidth="@dimen/_250sdp"
                    android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/shape_rounded_green_corner_4"
                    android:minHeight="40dp"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="wrap_content" />




                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:visibility="visible"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/time_txt"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    android:text="6:30 pm"
                    android:textColor="@color/colorTextHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:id="@+id/imgs_rec"
                    android:visibility="gone"
                    android:layoutDirection="rtl"/>

                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/time_txt2"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    android:text="6:30 pm"
                    android:textColor="@color/colorTextHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_10sdp">


                <FrameLayout
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:id="@+id/frame_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp">
                    <ProgressBar
                        android:layout_gravity="center"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:indeterminateTint="@color/colorGreen2"
                        android:id="@+id/loaddd"/>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/img_chat"
                        android:scaleType="fitXY"
                        android:layout_gravity="center"
                        app:riv_corner_radius="8dp"
                        android:layout_width="@dimen/_125sdp"
                        android:layout_height="@dimen/_80sdp"/>



                </FrameLayout>


                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/time_txtaa"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    android:text="6:30 pm"
                    android:textColor="@color/colorTextHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="start"
                android:layout_marginStart="@dimen/_10sdp">


                <LinearLayout
                    android:background="@drawable/shape_rounded_green_corner_4"
                    android:visibility="visible"
                    android:id="@+id/sound_lin"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layoutDirection="ltr">

                    <ImageView
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/voice_img"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/play_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>


                    <com.warkiz.widget.IndicatorSeekBar
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seekbar_voice_lib"
                        android:layout_gravity="center_vertical"
                        app:isb_seek_smoothly="true"
                        app:isb_ticks_count="1"
                        app:isb_show_tick_marks_type="oval"
                        app:isb_tick_marks_size="0dp"
                        app:isb_show_tick_texts="false"
                        app:isb_thumb_color="@color/colorWhite"
                        app:isb_thumb_size="15dp"
                        app:isb_show_indicator="none"/>



                </LinearLayout>

                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/time_txtbb"
                    android:textAlignment="viewStart"
                    android:textSize="10sp"
                    android:text="6:30 pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextHint"

                    />

            </LinearLayout>


        </LinearLayout>

        <View
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp"
            />

    </LinearLayout>
</layout>