<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>

        <LinearLayout
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_txt"
                android:textAlignment="viewEnd"
                android:textSize="13sp"
                android:text="6:30 pm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="end"
                android:id="@+id/message_txt"
                android:textAlignment="viewStart"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="a"
                android:textColor="@color/colorWhite"
                android:background="@drawable/shape_rounded_blue_corner_4"
                android:minHeight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:id="@+id/frame_img"
                android:minWidth="150dp"
                android:layout_gravity="end"
                android:layout_width="150dp"
                android:layout_height="180dp">
                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_width="35dp"
                    android:layout_height="35dp"/>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/img_chat"
                    app:riv_corner_radius="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>

            <LinearLayout
                android:background="@drawable/shape_rounded_blue_corner_4"
                android:visibility="visible"
                android:id="@+id/sound_lin"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="40dp">

                <com.warkiz.widget.IndicatorSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekbar_voice_lib"
                    android:layout_gravity="center_vertical"
                    app:isb_seek_smoothly="true"
                    app:isb_ticks_count="1"
                    app:isb_show_tick_marks_type="oval"
                    app:isb_tick_marks_size="0dp"
                    app:isb_show_tick_texts="false"
                    app:isb_thumb_color="@color/colorMoov"
                    app:isb_thumb_size="15dp"
                    app:isb_show_indicator="none"/>

                <ImageView
                    android:id="@+id/voice_img"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/play_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>