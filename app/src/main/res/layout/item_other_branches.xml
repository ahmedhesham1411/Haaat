<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_rounded_grey_stroke"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:gravity="center"
        android:id="@+id/full_item">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:src="@drawable/haat_home_1"
            android:layout_gravity="center_vertical"
            />


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:paddingStart="15dp"
                >


                <TextView

                    android:textSize="16sp"
                    android:fontFamily="@font/cairo_regular"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:maxLength="40"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textAlignment="viewStart"
                    android:id="@+id/store_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkk"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:id="@+id/check_img"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="10dp">
                
                <ImageView
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/pinn"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/colorTextHint"
                    android:textAlignment="viewStart"
                    android:id="@+id/store_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="15dp"
                android:gravity="center"
                android:paddingStart="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:id="@+id/store_distance"
                    android:textSize="10sp"
                    android:textColor="@color/colorTextHint"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:fontFamily="@font/cairo_regular"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorTextHint"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/km_mr"
                    android:layout_marginTop="5dp"
                    android:textSize="10sp"
                    android:text="@string/km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</layout>